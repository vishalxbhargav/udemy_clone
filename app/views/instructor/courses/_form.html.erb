<div class="pt-5">
    <%= form_with model: [:instructor,course] do |form| %>
        <div class="py-1">
            <p><%=form.label :title%></p>
            <%=form.text_field :title, placeholder:"Enter your course title...", autocomplete: "title",class:"h-8 w-[30rem] rounded focus:outline-0 border placeholder:text-sm pl-2"%>
        </div>
        <div class="pt-2">
            <p><%=form.label :description%></p>
            <%=form.text_area :description,placeholder:"Enter your course description...", autocomplete: "description",class:"h-[8rem] w-[30rem] rounded focus:outline-0 border placeholder:text-sm pl-2"%>
        </div>
        <div class="py-1">
            <p><%= form.label :course_content %>
            <%= form.rich_text_area :course_content, placeholder:"Enter your course content...", autocomplete: "description",class:"rounded focus:outline-0 border placeholder:text-sm pl-2" %>
        </div>
        <div class="py-1">
            <p><%=form.label :tumbnail%></p>
            <%=form.file_field :thumbnail,class:""%>
        </div>
        <div class="py-1">
            <p><%=form.label :price%></p>
            <%=form.number_field :price, placeholder:"Enter your course price...", autocomplete: "description",class:"h-8 rounded focus:outline-0 border placeholder:text-sm pl-2"%>
        </div>
        <div class="flex items-center justify-evenly py-2  ">
        <%= form.submit "Create Course", class:" py-3 px-5 bg-blue-500 rounded-lg text-white transition-all cursor-pointer hover:scale-105 "%>
        <%= link_to "Cencel", instructor_path, class:" py-3 px-5 bg-gray-500 rounded-lg text-white transition-all cursor-pointer hover:scale-105 "%>
      </div>
    <%end%>
</div>