<div class="h-full flex flex-col justify-center items-center">
  <h2 class="font-semibold text-lg">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field py-1">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, placeholder:"Enter your first_name...", autocomplete: "first_name",class:"h-8 rounded focus:outline-0 border placeholder:text-sm pl-2" %>
    </div>
    <div class="field py-1">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autofocus: true, placeholder:"Enter your last_name...", autocomplete: "last_name",  class:"h-8  rounded focus:outline-0 border placeholder:text-sm pl-2" %>
    </div>
    <div class="field py-1">
      <%= f.label :username %><br/>
      <%= f.text_field :username, autofocus: true, placeholder:"Enter your username...", autocomplete: "username",  class:"h-8 rounded focus:outline-0 border placeholder:text-sm pl-2"%>
    </div>
    <div class="field py-1">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder:"Enter your email...", autocomplete: "email", class:"h-8 rounded focus:outline-0 border placeholder:text-sm pl-2" %>
    </div>

    <div class="field py-1">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",placeholder:"Enter your password...", class:"h-8 rounded focus:outline-0 border placeholder:text-sm pl-2"%>
    </div>

    <div class="field py-1">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Enter your confirm-password...", class:"h-8 rounded focus:outline-0 border placeholder:text-sm pl-2" %>
    </div>
   <div class="field py-1">
      <%= f.label :role %><br />
      <%= f.select :role,["User","Instructor"], autofocus: true,class:"h-[6rem] rounded focus:outline-0 border placeholder:text-sm pl-2" %>
    </div>
    <div class="actions  ">
      <div class="flex items-center justify-center py-2  ">
        <%= f.submit "Sign up", class:"w-full py-2 bg-blue-500 rounded-lg text-white transition-all cursor-pointer hover:scale-105 "%>
      </div>
    </div>
  <% end %>

  <div class="">already have an account ?<span class=""><%= render "devise/shared/links" %></span></div>
</div>