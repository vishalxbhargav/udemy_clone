<div class="h-full flex flex-col pb-4" data-controller="answer">
    <div class="py-4">
        <div class="w-[80%] container mx-auto border rounded-lg px-2">
            <div>
                <p class="text-2xl border-b py-1"><span class="font-bold">Question</span> : <%= @question.title%></p>
                <p class="py-1"><p class="font-bold">Description</p><br><%= @question.description%></p>
            </div>
            <div class="flex py-2 justify-between items-center  px-4">
                <div class="flex items-center gap-4">
                    <div class="h-5 w-5 px-4 py-4 bg-gray-200 rounded-full"></div>
                    <p><%=@question.user.username%></p>
                </div>
                <p>create at : <%=@question.created_at.strftime('%m/%d/%Y')%></p>
            </div>
        </div>
    </div>
  <div class="w-[60%] container mx-auto">
  
    <div class="w-[80% container mx-auto]">
     <div>
      <div class="mb-3">
          <label for="content">Answer:</label>
          <br>
          <textarea id="content" data-answer-target="body" class="focus:outline-0 border w-[80%] rounded" rows="4"></textarea>
          <br>
        </div>
        <button data-action="click->answer#submit" id="question_<%= @question.id %>" class="bg-blue-500 py-2 px-4 rounded-lg text-white transition-all ease-in hover:scale-105">
        Write A Answer
      </button>
     </div>
    </div>
  </div>
  <div class="w-[80%] container mx-auto pt-4 ">
    <div class="flex flex-col gap-3">
      <div data-answer-target="result"></div>
      <% if @question.answers.any? %>
        <% @question.answers.each do |answer| %>
          <%= render "components/answer", answer: answer%>
        <% end %>
      <% else %>
        <p>No Answers yet</p>
      <% end %>
    </div>
  </div>
</div>