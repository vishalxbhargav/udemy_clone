<div class="w-[80%] h-full container mx-auto py-4">
  <%=form_with model:[:forume,@question] do |form| %>
    <div>
        <p><%=form.label :title%></p>
        <%=form.text_field :title,class: "focus:outline-0 border w-[80%] rounded p-2" %>
    </div>
    <div>
      <p><%= form.label :description %></p>
      <%= form.text_area :description, class: "focus:outline-0 border h-32 w-[80%] rounded p-2" %>
    </div>
    <div class="mt-4 flex space-x-4 gap-4">
      <%= form.submit 'Update Answer', class: "py-2 px-4 bg-blue-500 rounded-lg text-white cursor-pointer" %>
      <%= link_to "Cancel", forume_forume_path(@question.forume), class: "py-2 px-4 bg-gray-500 rounded-lg text-white" %>
    </div>
  <% end %>
</div>
