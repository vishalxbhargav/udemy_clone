<div class="w-[80%] h-full container mx-auto">
  <%=form_with model:[:forume,@answer] do |form| %>
    <div>
      <p><%= form.label :body %></p>
      <%= form.text_area :body, class: "focus:outline-0 border h-32 w-[80%] rounded p-2" %>
    </div>
    <div class="mt-4 flex space-x-4 gap-4">
      <%= form.submit 'Update Answer', class: "py-2 px-4 bg-blue-500 rounded-lg text-white cursor-pointer" %>
      <%= link_to "Cancel", forume_question_path(@answer.question), class: "py-2 px-4 bg-gray-500 rounded-lg text-white" %>
    </div>
  <% end %>
</div>
