<div>
    <div class=" border rounded-lg py-2 px-4 " data-controller="comment">   
        <div class="flex py-2 justify-between items-center px-4 border-b">
            <div class="flex items-center gap-4">
                <div class="h-5 w-5 px-4 py-4 rounded-full"></div>
                <p><%=@answer.user.username%></p>
            </div>
            <p><%=@answer.created_at.strftime('%d/%m/%Y')%></p>
        </div>
        <p class="border-b py-2"><%=@answer.body%></p>
        <div class="flex justify-evenly items-center items-center py-1">
        List of Comments
        </div>
    </div>
    <div class="w-[80%] container mx-auto bg-green-200">
        <%=form_with model:[:forume,@answer,Comment.new] do |form|%>
           <div>
                <p><%= form.label :body %></p>
                <%= form.text_area :body,placeholder:"Content for comment", class: "focus:outline-0 border h-32 w-[80%] rounded p-2" %>
            </div>
            <div class="mt-4 flex space-x-4 gap-4">
                <%= form.submit 'Create Comment', class: "py-2 px-4 bg-blue-500 rounded-lg text-white cursor-pointer" %>
            </div>
        <%end%>
    </div>
    <div class="container w-[90%] mx-auto pt-4 ">
        <p clas="py-2">List of comments</p>
        <div class="flex flex-col px-4 gap-4">
            <%if @answer.comments&.any?%>
                <%@answer.comments&.each do |comment|%>
                    <div class="border rounded-lg ">
                        <p class="border-b p-4"><%=comment.body%></p>
                        <div class="flex py-2 justify-between items-center px-4 border-b">
                            <div class="flex items-center gap-4">
                                <div class="h-3 w-3 px-2 py-2 bg-gray-200 rounded-full"></div>
                                <p class="text-sm"><%=comment.user.username%></p>
                            </div>
                            <p class="text-sm"><%=comment.created_at.strftime('%d/%m/%Y')%></p>
                        </div>
                    </div>
                <%end%>
            <%else%>
                <p>Not yet Comment</p>
            <%end%>
        </div>
    </div>
</div>