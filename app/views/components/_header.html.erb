<div class="h-full  border-b-2 px-4 flex justify-between items-center">
    <div class="w-[30%] flex items-center">
        <%= link_to root_path do %>
            <%= image_tag "logo.svg",class:"h-9" %>
        <%end%>
        <span class="pl-2 text-[2rem] font-semibold">
        <%= link_to root_path do %>
           LEARNO
        <%end%>
        </span>
    </div>
    <div class="w-[70%] flex justify-between items-center">
         <%= link_to search_page_path do %>
            <div>
                <input type="text" placeholder="search courses.."  class="h-8 w-full rounded-l-lg focus:outline-0 border-b">
            </div>
        <%end%>
        <div>
            <% if user_signed_in? %>
                <div class="flex justify-between">
                    <div class="flex justify-between items-center px-3">
                        <% if current_user.role=="Instructor"|| current_user.role=="Admin"%>
                            <%= link_to  "/motor_admin/" do %>
                                <p class="px-2 py-1 rounded-lg transition-all hover:bg-black hover:rounded-lg hover:text-white cursor-pointer">Admin Panel</p>
                            <%end%>
                        <%end%>
                        <% if current_user.role=="Instructor"|| current_user.role=="Admin"%>
                            <%= link_to  instructor_path do %>
                                <p class="px-2 py-1 rounded-lg transition-all hover:bg-black hover:rounded-lg hover:text-white cursor-pointer">Instructor</p>
                            <%end%>
                        <%end%>
                        <%= link_to student_my_learning_path do %>
                            <p class="px-2 py-1 rounded-lg transition-all hover:bg-black hover:rounded-lg hover:text-white cursor-pointer">My Learning</p>
                        <%end%>
                        <%= link_to notifications_path do%>
                            <div class="relative cursor-pointer">
                                <p class="h-5 px-4"><%= image_tag "bell.png", class:"h-full" %></p>
                                    <p class="absolute bottom-2 right-1 rounded-full bg-red-600 p-[5px] text-white text-[0.5rem] font-extrabold" id="notification"><%=current_user.unread_notification.count%></p>
                            </div>
                        <%end%>
                    </div>
                     <p class="py-1 px-3 text-center text-white rounded bg-blue-500"><%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-white" %></p>
                </div>
                
            <%else%>
                <p class="py-1 px-3 text-center rounded text-white bg-blue-500"><%= link_to "Login", new_user_session_path%></p>
            <%end%>
        </div>
    </div>
</div>