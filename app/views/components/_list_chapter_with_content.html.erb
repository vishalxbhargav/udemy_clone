<% if current_user.role!="Instructor"%>
    <div class="h-screen w-screen text-lg font-bold flex justify-center items-center">Only Instructor can access this page</div>
<%else%>
    <div class="w-screen h-screen flex">
        <div class="w-[20%] border-r-2 border-gray-200">
            <div class="h-full flex flex-col justify-between  py-3 ">
                <div class="flex flex-col">
                    <p class="py-4 text-center">Chapter List</p>
                    <% course.chapters.each do |chapter|%>
                        <p class="pl-3 bg-gray-100 mx-2 rounded-sm cursor-pointer "><%=chapter.title%></p>
                    <%end%>
                </div>
            </div>
        </div>
        <div class="h-screen w-[80%]">
            <%= render "components/chapter_content" chapter: @course.chapter %>
        </div>
    </div>
<%end%>